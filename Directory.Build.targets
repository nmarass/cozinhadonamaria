<Project>
  <!-- Remove a referência WPF do WebView2 para evitar o conflito MSB3277 de WindowsBase -->
  <ItemGroup>
    <PackageReference Update="Microsoft.Web.WebView2" ExcludeAssets="runtime;native;contentfiles;analyzers;buildtransitive" Condition="'$(BuildingInsideVisualStudio)' == 'false'"> </PackageReference>
    <Reference Remove="Microsoft.Web.WebView2.Wpf" />
  </ItemGroup>
  <PropertyGroup>
    <AutoUnifyAssemblyReferences>true</AutoUnifyAssemblyReferences>
  </PropertyGroup>
</Project>
